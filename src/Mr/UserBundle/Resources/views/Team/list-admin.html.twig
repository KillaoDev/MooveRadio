{% extends '::base.html.twig' %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>{{ 'mr.user.team.list.number'|trans }}</th>
                <th>{{ 'mr.user.team.list.name'|trans }}</th>
                <th>{{ 'mr.user.team.list.users'|trans }}</th>
                <th>{{ 'mr.user.team.actions.title'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.number }}</td>
                    <td>{{ team.name }}</td>
                    <td>
                        <ul>
                            {% for userteam in team.userteam %}
                                <li>{{ userteam.user.username }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <a href="{{ path('mr_user_team_update', {'teamid': team.id}) }}">
                            {{ 'mr.user.team.actions.update'|trans }}
                        </a>
                        <a href="{{ path('mr_user_team_delete', {'teamid': team.id}) }}">
                            {{ 'mr.user.team.actions.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p><a href="{{ path('mr_user_team_create') }}">{{ 'mr.user.team.actions.create'|trans }}</a></p>
{% endblock %}